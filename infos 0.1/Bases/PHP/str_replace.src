function convert_special_chars_4url($text)
{
  $text = str_replace(" ","%20",$text); 
  $text = str_replace("è","%E8",$text); 
  $text = str_replace("û","%fb",$text); 
  $text = str_replace("é","%E9",$text); 
  $text = str_replace("ù","%F9",$text); 
  $text = str_replace("ë","%EB",$text); 
  $text = str_replace("ê","%EA",$text); 
  $text = str_replace("à","%e0",$text); 
  $text = str_replace("ü","%fc",$text); 
  $text = str_replace("â","%E2",$text); 
  $text = str_replace("ç","%E7",$text); 
  $text = str_replace("ô","%F4",$text); 
 return $text;
}

