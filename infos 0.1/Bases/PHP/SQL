<?php


$link = mysql_connect("localhost", "mysql_user", "mysql_password")
    or die("Impossible de se connecter : " . mysql_error());
echo 'Connexion russie';


$result = mysql_query('SELECT * WHERE 1=1');
if (!$result) {
    die('Requte invalide : ' . mysql_error());
}


mysql_close($link);

?>